<%  if current_user.admin  %>
<h1>Listing product_categories</h1>

<table>
  <thead>
    <tr>
      <th>Category name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_categories.each do |product_category| %>
      <tr>
        <td><%= product_category.category_name %></td>
        <td><%= link_to 'Show', product_category ,:class=>"btn btn-danger"%></td>
        <td><%= link_to 'Edit', edit_product_category_path(product_category) ,:class=>"btn btn-danger"%></td>
        <td><%= link_to 'Destroy', product_category, method: :delete, data: { confirm: 'Are you sure?' } ,:class=>"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product category', new_product_category_path ,:class=>"btn btn-danger"%>
<%else %>
<br>
<h1>This Content is not available for users</h1>
<br><br><br><br><br><br>

<% end %>

