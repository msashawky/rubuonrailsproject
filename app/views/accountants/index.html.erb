<h1>Listing accountants</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accountants.each do |accountant| %>
      <tr>
        <td><%= link_to 'Show', accountant %></td>
        <td><%= link_to 'Edit', edit_accountant_path(accountant) %></td>
        <td><%= link_to 'Destroy', accountant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

